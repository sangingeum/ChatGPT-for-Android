<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTextTheme">
        <item name="android:fontFamily">@string/default_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/MahoganyBrown</item>
    </style>
    <style name="itemTheme" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:fontFamily">@string/default_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/MahoganyBrown</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="baseTheme" parent="Theme.AppCompat">
        <!-- Customize primary and secondary colors -->
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryDark">#990000</item>
        <item name="colorAccent">#00FF00</item>

        <!-- Customize text appearance -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textSize">16sp</item>

        <!-- Customize action bar -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Customize dialog appearance -->
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
    </style>

    <!-- Customize action bar style -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#FFFFFF</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Customize action bar title text appearance -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Customize dialog theme -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">#F0F0F0</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
</resources>